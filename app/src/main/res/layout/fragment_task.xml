<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".TaskSystem.TasklistFragment">

    <include layout="@layout/content_main2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/include"
        android:layout_below="@+id/add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calender"
        android:src="@drawable/ic_action_calender"
        android:layout_above="@+id/include"
        android:layout_toLeftOf="@+id/add"
        android:layout_toStartOf="@+id/add"
        android:layout_marginRight="103dp"
        android:layout_marginEnd="103dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/add"
        android:background="@drawable/ic_action_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
        android:textIsSelectable="false"
        android:id="@+id/cant"
        android:text="日期"
        android:layout_alignBottom="@+id/calender"
        android:layout_toLeftOf="@+id/calender"
        android:layout_toStartOf="@+id/calender"
        android:layout_marginBottom="5dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/include"
        android:layout_toStartOf="@+id/cant"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cant" />

</RelativeLayout>
